<% if user_signed_in? %>
  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
      <%= current_user.name %>
    </button>
    <ul class="dropdown-menu">
      <li>
        <%= link_to t('devise.registrations.edit.title', resource: current_user.class.model_name.human), edit_user_registration_path, class: 'dropdown-item' %>
      </li>
      <li><hr class="dropdown-divider"></li>
      <li>
        <%= link_to t('devise.sessions.signed_out'), destroy_user_session_path,  method: :delete, class: 'dropdown-item' %>
      </li>
    </ul>
  </div>
<% end %>