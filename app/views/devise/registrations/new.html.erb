<h2><%= t('devise.registrations.new.sign_up') %></h2>

<div id="form-session">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, t('activerecord.attributes.user.email') %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: t('activerecord.attributes.user.email') %>
    </div>

    <div class="field">
      <%= f.label :password, t('activerecord.attributes.user.password') %>
      <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length)%></em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: t('activerecord.attributes.user.password') %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, t('activerecord.attributes.user.password_confirmation') %><br />
      <%= f.password_field :password_confirmation, autocomplete: t('activerecord.attributes.user.password_confirmation') %>
    </div>

    <div class="field">
      <%= f.label :name, t('activerecord.attributes.user.name') %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :cpf, t('activerecord.attributes.user.cpf') %><br />
      <%= f.text_field :cpf %>
    </div>

    <div class="field">
      <%= f.label :phone, t('activerecord.attributes.user.phone') %><br />
      <%= f.text_field :phone %>
    </div>

    <div class="field">
      <%= f.label :registration_number, t('activerecord.attributes.user.registration_number') %><br />
      <%= f.text_field :registration_number %>
    </div>

    <div class="field">
      <%= f.select :user_type, options_for_select(User.user_types.keys.map { |type| [type.humanize, type] }) %>
    </div>

    <div class="actions">
      <%= f.submit t('devise.registrations.new.sign_up'), class: 'btn btn-success' %>
    </div>

    <div class="actions">
      <%= link_to 'Voltar', root_path, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>

